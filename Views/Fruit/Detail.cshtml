@model List<FruitShare.Models.FruitLover>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Fruit" asp-action="Dashboard" class="navbar-brand">FruitShare</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a class="align-right" asp-area="" asp-controller="Fruit" asp-action="AddNewFruitPage">Add a Fruit</a></li>
                <li><a class="align-right" asp-area="" asp-controller="Fruit" asp-action="MySharedFruit">Fruit I'm Sharing</a></li>
                <li><a class="align-right" asp-area="" asp-controller="Fruit" asp-action="MyClaimedFruit">Fruit I'm Claiming</a></li>
                <li><a class="align-right" asp-area="" asp-controller="Home" asp-action="LogOut">Log Out</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container fruitDetailBG img-fluid">

    <h1 id="fruitDetailTitle">@ViewBag.ThisFruit.CreatedBy.UserName's, @ViewBag.ThisFruit.FruitType @ViewBag.ThisFruit.FruitName</h1>

    <p id="fruitDetailNotes">@ViewBag.ThisFruit.FruitNotes</p>

    <h2 id="fruitDetailDirections">Please email the below FruitShare Members when your fruit is ripe and ready for sharing:</h2>

    @foreach( var rev in Model )
    {
        <h3 id="fruitDetailLoversEmails">@rev.User.UserName, <a href="mailto:@rev.User.Email"><button type="submit" class="btn-lg btn-info" id="emailBtn">@rev.User.Email</button></a></h3>
    }

    
</div>