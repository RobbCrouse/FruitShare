<div class="container AddFruit img-fluid" id="AddFruitBG">

    
    <h2>Add a Fruit to Share!</h2>
    

    <div asp-validation-summary="All"></div>

    
    <form asp-controller="Fruit" asp-action="CreateFruitForm" method="Post">

        <div class="form-group col-md-12" id="addFruitFormFields">
            
            <div class="form-group col-md-10">
                <input class="form-control" asp-for="FruitName"/><br>
            </div>
        
            <div class="form-group col-md-10">
                <input class="form-control" asp-for="FruitType"/><br>
            </div>
        
            <div class="form-group col-md-10">
                <textarea class="form-control" asp-for="FruitNotes"></textarea><br>
            </div>

            <div class="form-group col-md-10 text-right">
                <button type="submit" class="btn btn-info" id="addFruitBtn">Add This Fruit!</button>
            </div>

        </div>
    </form>
    

